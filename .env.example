# =============================================================================
# Local LLM Agent Framework - Configuration
# =============================================================================
# Copy this file to .env and adjust values for your environment.

# -----------------------------------------------------------------------------
# LLM Service
# -----------------------------------------------------------------------------
LLM_MODEL_PATH=/path/to/your/model.gguf
LLM_CONTEXT_SIZE=8192
LLM_GPU_LAYERS=-1
LLM_THREADS=8
LLM_PORT=8000

# Generation defaults
LLM_DEFAULT_MAX_TOKENS=1024
LLM_DEFAULT_TEMPERATURE=0.7
LLM_DEFAULT_TOP_P=0.9

# -----------------------------------------------------------------------------
# Load Balancer
# -----------------------------------------------------------------------------
LB_WORKER_COUNT=1
LB_WORKER_BASE_PORT=8010
LB_HEALTH_CHECK_INTERVAL=30
LB_REQUEST_TIMEOUT=300

# -----------------------------------------------------------------------------
# Backend Service
# -----------------------------------------------------------------------------
BACKEND_PORT=10821
BACKEND_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Voice Services (optional)
# -----------------------------------------------------------------------------
TTS_PORT=8033
STT_PORT=8034

# TTS Settings
TTS_SAMPLE_RATE=24000
TTS_DEFAULT_VOICE=af_heart
TTS_DEFAULT_LANGUAGE=en

# STT Settings
STT_MODEL_SIZE=large-v3-turbo
STT_DEVICE=cuda
STT_COMPUTE_TYPE=float16

# -----------------------------------------------------------------------------
# Framework Settings
# -----------------------------------------------------------------------------
AGENTS_DIR=agents
LOG_LEVEL=INFO
VERBOSE=false
